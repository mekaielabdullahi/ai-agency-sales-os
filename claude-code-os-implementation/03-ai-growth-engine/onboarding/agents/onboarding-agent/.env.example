# Onboarding Agent Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Gmail API (for sending emails)
# ============================================
# Create at: https://console.cloud.google.com/
GMAIL_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-google-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token

# Sender email address
FROM_EMAIL=hello@arisegroup.ai

# ============================================
# Slack API (for channel creation)
# ============================================
# Create at: https://api.slack.com/apps
# Required scopes: channels:manage, channels:read, chat:write
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Channel for new client notifications
NEW_CLIENTS_CHANNEL=new-clients

# ============================================
# Notion API (for database updates)
# ============================================
# Create at: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_your-notion-api-key

# Clients database ID (from URL: notion.so/xxx/{DATABASE_ID}?v=yyy)
NOTION_CLIENTS_DATABASE_ID=your-notion-database-id

# ============================================
# Calendar (for scheduling link in emails)
# ============================================
CALENDAR_LINK=https://cal.com/arisegroup/logistics

# ============================================
# n8n Webhook (optional - for deployment)
# ============================================
N8N_WEBHOOK_URL=https://n8n.arisegroup.ai/webhook/onboarding

# ============================================
# Stripe (for webhook verification)
# ============================================
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
